@using MyPersonalBlog.Components.Loading
@inherits LayoutComponentBase

<CascadingValue Value="this">
    <PageTitle>MyPersonalBlog</PageTitle>
    <header id="top" name="top" class="cabecalho-base">
        <NavHeaderMenu />
    </header>
    @Body
    <footer class="rodape-base">
        <LoadingComponent IsLoading="isLoading" />
        @* <NavFooterMenu /> *@
    </footer>
</CascadingValue>

@code {
    private bool isLoading = false;

    public void SetLoading(bool state)
    {
        this.isLoading = state;
        StateHasChanged();
    }

}